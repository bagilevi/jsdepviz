#!/bin/sh
cd client
env WEBPACK_ENV=production webpack --progress -p
scp -r dist root@jslay.jkl.me:/srv/jslay/dist

cd ../server
ssh root@jslay.jkl.me "mkdir -p /srv/jslay/server"
scp -r main.js package.json git-repo-retriever.js server.js root@jslay.jkl.me:/srv/jslay/server
ssh root@jslay.jkl.me "cd /srv/jslay/server; npm install && npm start"


